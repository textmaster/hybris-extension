<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<widget-definition xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:noNamespaceSchemaLocation="http://www.hybris.com/schema/cockpitng/widget-definition.xsd"
                   id="com.textmaster.widgets.loader.accounts">
    <name>TextMaster Accounts Loader Widget</name>
    <description>Allows to load accounts</description>
    <version>1.0</version>
    <view src="none"/>
    <keywords>
        <keyword>Textmaster</keyword>
    </keywords>
    <controller class="com.textmaster.backoffice.widgets.TextMasterAccountsLoaderController"/>
    <sockets>
        <input id="refresh" type="java.lang.Object"/>
        <input id="selectedAccount" type="com.textmaster.core.model.TextMasterAccountModel"/>
        <output id="accounts" type="com.textmaster.core.model.TextMasterAccountModel" multiplicity="List"/>
        <output id="selectAccount" type="com.textmaster.core.model.TextMasterAccountModel"/>
    </sockets>
</widget-definition>
